<div class="columns is-multiline">
  <% page.posts.forEach(function(post,i){ %>
  <% if (i <= 3) { %>
  <div class="column is-4">
    <div class="card">
      <div class="card-image">
        <figure class="image is-4by3">
          <img src="<%- post.cover %>" alt="<%- post.excerpt %>" class="placeholder">
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img src="<%= config.propic %>" alt="<%- post.author %>">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4">
              <a href="/<%- post.path %>"><%- post.title %></a>
            </p>
            <p class="subtitle is-6">
              <% post.tags.forEach(function(tag){ %>
              <a class="subtitle is-6" href="/tags/<%- tag.name %>">
                #<%- tag.name %>
              </a>
              <% }) %>
            </p>
          </div>
        </div>

        <div class="content">
          <strong><%- post.excerpt %></strong>
          <br>
          <time datetime="2016-1-1"><%- full_date(post.date, "MMMM Do") %></time>
          by @<%- post.author %>
        </div>
      </div>
    </div>
  </div>
  <% } else { %>
  <div class="column is-6">
    <div class="media">
      <figure class="media-left">
        <p class="image is-64x64">
          <img src="<%= config.propic %>" alt="Placeholder image">
        </p>
      </figure>
      <div class="media-content">
        <div class="content">
          <p>
            <strong>
              <a href="/<%- post.path %>"><%- post.title %></a>
            </strong>
            <br>
            <%- post.excerpt %>
            <br>
            <br>
            <% post.tags.forEach(function(tag){ %>
            <a class="subtitle is-6" href="/tags/<%- tag.name %>">
              #<%- tag.name %>
            </a>
            <% }) %>
            <br>
            <small>
              <time datetime="2016-1-1"><%- full_date(post.date, "MMMM Do") %></time>
              by @<%- post.author %>
            </small>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% } %>
  <% }) %>

  <div class="page_num">

    <% if ( page.total == 1 ) { %>
    <% } else { %>

    <% if ( page.prev == 0 ) { %>
    <% } else if ( page.prev == 1 ) { %>
    <a class="page_item" href="<%= theme.site%>/<%= page.prev_link %>"><%= page.prev %></a>
    <% } else { %>
    <a class="page_item" href="<%= theme.site%>">1</a>
    <%if ( page.prev > 2 ) { %>
    <p>...</p>
    <% } %>
    <a class="page_item" href="<%= page.prev_link %>"><%= page.prev %></a>
    <% } %>

    <a class="page_item" href="<%= theme.site%>/<%= page.current_url %>"><%= page.current %></a>

    <% if ( page.next != 0 ) { %>
    <a class="page_item" href="<%= page.next_link %>"><%= page.next %></a>

    <% if (page.total - page.next > 1 ) { %>
    <p>...</p>
    <% } %>
    <% if ( page.total > page.next) { %>
    <a class="page_item" href="<%= theme.site%>/page/<%= page.total %>"><%= page.total %></a>
    <% } %>
    <% } %>


    <% } %>

  </div>
</div>