<post>
    <div class="container">
        <div class="columns">
            <div class="column is-7">
                <div class="post_title">
                    <p class="is-5">
                        <% page.tags.forEach(function(tag){ %>
                            <strong>
                                <a href="/tags/<%- tag.name %>">
                                    #<%- tag.name %>
                                </a>
                            </strong>
                        <% }) %>
                    </p>
                    <h1 class="title is-2"><%- page.title %></h1>
                    <p class="subtitle is-6">
                        <time datetime="2016-1-1"><%- full_date(page.date, "MMMM Do") %></time>
                    </p>
                </div>
                
                <div id="content">
                    <%- page.content %>
                </div>
            </div>
        </div>
    </div>

  
  </post>
  